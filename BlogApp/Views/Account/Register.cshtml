@model BlogApp.Models.ViewModels.UserModel



@{
    ViewBag.Title = "Register";
}

<center><p class ="home-paragraph">Register </p></center>

<div class="row">
    <div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-4">

            @if(ViewBag.Message != null)
            {
                <div class=" alert alert-danger">@ViewBag.Message</div>
            }

        <form method="post" id="registerForm">
            <div class="form-group" hidden>
                <label asp-for="Users.UserId" class="control-label"></label>
                <input asp-for="Users.UserId" class="form-control textbox" />
            </div>
            <div class="form-group">
                <label asp-for="Users.Name" class="control-label">Username</label>
                <input asp-for="Users.Name" class="form-control textbox" />
            </div>
            <div class="form-group">
                <label asp-for="Users.Email" class="control-label"></label>
                <input asp-for="Users.Email" class="form-control textbox" />
            </div>
            <div class="form-group">
                <label asp-for="Users.FullName" class="control-label"></label>
                <input asp-for="Users.FullName" class="form-control textbox" />
            </div>
            <div class="form-group">
                <label  class="control-label">Password</label>
                    <input type="password"  asp-for="Users.PasswordHash" class="form-control textbox" />
            </div>

                <div class="form-group d-flex justify-content-center mt-2">
                    <input type="submit" class="btn btn-primary btn-size" value="OK" />
            </div>
        </form>
        </div>
    </div>
</div>

