@{
    ViewBag.Title = "Login";
}
<center><p class="home-paragraph">Login </p></center>
<div class="row">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="col-md-4">

            @if(ViewBag.Message != null)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }
            <form method="post">
                <div class="form-group">
                    <label class="control-label">Email</label><br />
                    <input name="email" class="form-control textbox" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label><br />
                    <input  type="password" name="password" class="form-control textbox" />
                </div>
                <div class="form-group d-flex justify-content-center mt-2">
                    <input type="submit" class="btn btn-primary btn-size" value="OK" />
                </div>
            </form>
        </div>
    </div>
</div>

